# ğŸ”¹ BUCLES
print("\nContando del 1 al 5 con un bucle for:")
for i in range(1, 6):
    print(i)

print("\nUsando un bucle while:")
contador = 1
while contador <= 5:
    print(contador)
    contador += 1

# ğŸ”¹ MANEJO DE EXCEPCIONES
try:
    numero = int(input("\nIngresa un nÃºmero entero: "))
    print(f"Has ingresado el nÃºmero {numero}.")
except ValueError:
    print("Error: Debes ingresar un nÃºmero vÃ¡lido.")

# ğŸ”¹ FUNCIONES
def saludar(nombre):
    """FunciÃ³n que recibe un nombre y lo saluda"""
    return f"Hola, {nombre}! Bienvenido a Python."

# Llamando la funciÃ³n
print(saludar("Ana"))

# ğŸ”¹ FUNCIONES LAMBDA
doble = lambda x: x * 2
print(f"El doble de 5 es {doble(5)}")