# 游댳 CONDICIONALES
edad = int(input("Ingresa tu edad: "))

if edad < 18:
    print("Eres menor")
    print("Eres un cr칤o")
elif edad == 18:
    print("Tienes 18 a침os, puedes conducir")
else:
    print("ya eres grande")

# 游댳 BUCLES
print("\nContando del 1 al 5 con un bucle for:")
for i in range(1, 6):
    print(i)

print("\nUsando un bucle while:")
contador = 1
while contador <= 5:
    print(contador)
    contador += 1

# 游댳 MANEJO DE EXCEPCIONES
try:
    numero = int(input("\nIngresa un n칰mero entero: "))
    print(f"Has ingresado el n칰mero {numero}.")
except ValueError:
    print("Error: Debes ingresar un n칰mero v치lido.")

# 游댳 FUNCIONES
def saludar(nombre):
    """Funci칩n que recibe un nombre y lo saluda"""
    return f"Hola, {nombre}! Bienvenido a Python."

# Llamando la funci칩n
print(saludar("Ana"))

# 游댳 FUNCIONES LAMBDA
doble = lambda x: x * 2
print(f"El doble de 5 es {doble(5)}")